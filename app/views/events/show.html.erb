<p>
  <strong>Titel:</strong>
  <%= @event.title %>
</p>
 
<p>
  <strong>Beschreibung:</strong>
  <%= @event.description %>
</p>

<h2>Streams</h2>
<% @event.feeds.each do |feed| %>
  <p>
    <strong>Nutzername:</strong>
    <%= feed.user.email %>
  </p>
  <p>
  	<strong>Titel</strong>
  	<%= feed.title %>
  </p>
<% end %>

<h2>Streame selbst:</h2>
<%= form_for([@event, @event.feeds.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', events_path %>