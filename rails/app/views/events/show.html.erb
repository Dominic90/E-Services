
<div class="row">
  <div class="col-md-2">
    
  </div>
  <div class="col-md-8">
    <h1><%= @event.title %></h1>
  </div>
  <div class="col-md-2">

  </div>
</div>

<div class="row">
  <div class="col-md-2">
    
  </div>
  <div class="col-md-8">
    <%= @event.description %>  </div>
  <div class="col-md-2">

  </div>
</div>

<div class="row">
  <div class="col-md-2">
    
  </div>
  <div class="col-md-8">
    <% if @event.user.id == current_user.id %>
      <a id="call" href="#" class="btn btn-success" onclick="master(); return false;">
        <span class="glyphicon glyphicon-play"> </span> Start 
      </a>

      <select id="resolution">
        <option>480x320</option>
        <option>640x480</option>
        <option>1280x720</option>
      </select>
    <% end %>
    <% if @event.user.id != current_user.id %>
      <a id="viewer"  href="#" class="btn btn-primary" onclick="viewer(); return false;">
        <span  class="glyphicon glyphicon-user"></span> View
      </a> 
    <% end %>
    <a id="terminate" href="#" class="btn btn-danger" onclick="stop(); return false;">
      <span class="glyphicon glyphicon-stop"></span> Stop
    </a>
  </div>
  <div class="col-md-2">

  </div>
</div>

<div class="row">
  <div class="col-md-2">
    
  </div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-8">
        <div id="videoBig">
          <video id="video" autoplay width="480px" height="360px"
            class="video-js vjs-default-skin"
            controls preload="auto"
            poster="img/webrtc.png"></video>
        </div>
      </div>
      
    </div>
  </div>
  <div class="col-md-2">

  </div>
</div>

<div class="row" style="display: none;">
  <div class="col-md-2">
    
  </div>
  <div class="col-md-8">
    <br /> <label class="control-label" for="console">Console</label>
    <div id="console"></div>
  <div class="col-md-2">

  </div>
</div>

<div class="row">
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-12">
        
      </div>
    </div>
  </div>
  <div class="col-md-7">
    
  </div>
</div>
