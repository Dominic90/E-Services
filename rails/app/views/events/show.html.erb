<div id="kurento_path" style="display: none;" ip="<%= @connection.ip %>" port="<%= @connection.port %>" url="<%= @event.url %>"></div>

<p>
  <strong>Titel:</strong>
  <%= @event.title %>
</p>
 
<p>
  <strong>Beschreibung:</strong>
  <%= @event.description %>
</p>

<div class="row">
  <div class="col-md-5">
    <div class="row">
      <div class="col-md-12">
        <% if @event.user.id == current_user.id %>
          <a id="call" href="#" class="btn btn-success" onclick="master(); return false;">
            <span class="glyphicon glyphicon-play"> </span> Master 
          </a>
        <% end %>
        <% if @event.user.id != current_user.id %>
          <a id="viewer"  href="#" class="btn btn-primary" onclick="viewer(); return false;">
            <span  class="glyphicon glyphicon-user"></span> Viewer
          </a> 
        <% end %>
        <a id="terminate" href="#" class="btn btn-danger" onclick="stop(); return false;">
          <span class="glyphicon glyphicon-stop"></span> Stop
        </a>
      </div>
    </div>
  </div>
  <div class="col-md-7">
    <div id="videoBig">
      <video id="video" autoplay width="640px" height="360px"
        poster="img/webrtc.png"></video>
    </div>
  </div>
  <br /> <label class="control-label" for="console">Console</label>
  <div id="console"></div>
</div>


<%= link_to 'Back', events_path %>